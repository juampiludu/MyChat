<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@drawable/cv_user_search_ripple"
        android:clickable="false"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_profile"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="@color/colorAccent"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_online"
                android:layout_width="19dp"
                android:layout_height="19dp"
                app:civ_border_width="12dp"
                app:civ_border_color="@color/colorRed"
                android:src="@drawable/profile"
                android:layout_below="@+id/username"
                android:layout_marginTop="12dp"
                android:layout_marginStart="-16dp"
                android:layout_toEndOf="@+id/profile_image"
                android:layout_toRightOf="@+id/username"
                android:visibility="gone">
            </de.hdodenhof.circleimageview.CircleImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_offline"
                android:layout_width="19dp"
                android:layout_height="19dp"
                app:civ_border_width="12dp"
                app:civ_border_color="#bfbfbf"
                android:src="@drawable/profile"
                android:layout_below="@+id/username"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="-16dp"
                android:layout_toEndOf="@+id/profile_image"
                android:layout_toRightOf="@+id/username"
                android:visibility="gone">
            </de.hdodenhof.circleimageview.CircleImageView>

            <ImageView
                android:id="@+id/icon_seen"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_sent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_below="@+id/username"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/message_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username"
                android:layout_toRightOf="@+id/icon_seen"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:textSize="16sp"
                android:maxLines="1"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="10dp"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>