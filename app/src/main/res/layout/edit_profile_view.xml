<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#353535">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile"
                android:gravity="center"
                android:layout_margin="20dp"
                android:textStyle="bold"
                android:textSize="24sp"/>

        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColorHint="@android:color/darker_gray"
            app:hintTextColor="@android:color/darker_gray"
            app:hintAnimationEnabled="true"
            android:background="@color/colorPrimary"
            app:startIconDrawable="@drawable/ic_person"
            app:startIconTint="@color/colorAccent"
            app:boxStrokeColor="?attr/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_username"
                android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:hint="@string/username"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColorHint="@android:color/darker_gray"
            app:hintTextColor="@android:color/darker_gray"
            app:hintAnimationEnabled="true"
            android:background="@color/colorPrimary"
            app:startIconDrawable="@drawable/ic_person_outline"
            app:startIconTint="@color/colorAccent"
            app:boxStrokeColor="?attr/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_name"
                android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:hint="@string/name"
                android:inputType="textCapWords"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColorHint="@android:color/darker_gray"
            app:hintTextColor="@android:color/darker_gray"
            app:hintAnimationEnabled="true"
            android:background="@color/colorPrimary"
            app:startIconDrawable="@drawable/ic_phone"
            app:startIconTint="@color/colorAccent"
            app:boxStrokeColor="?attr/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_phone"
                android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:hint="@string/phone"
                android:lines="1"
                android:inputType="phone"
                android:maxLines="1"
                android:singleLine="true"
                android:digits="0123456789+"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColorHint="@android:color/darker_gray"
            app:hintTextColor="@android:color/darker_gray"
            app:hintAnimationEnabled="true"
            android:background="@color/colorPrimary"
            app:startIconDrawable="@drawable/ic_facebook"
            app:startIconTint="@color/colorAccent"
            app:boxStrokeColor="?attr/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_facebook"
                android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:hint="Facebook"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColorHint="@android:color/darker_gray"
            app:hintTextColor="@android:color/darker_gray"
            app:hintAnimationEnabled="true"
            android:background="@color/colorPrimary"
            app:startIconDrawable="@drawable/ic_instagram"
            app:startIconTint="@color/colorAccent"
            app:boxStrokeColor="?attr/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_instagram"
                android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:hint="Instagram"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColorHint="@android:color/darker_gray"
            app:hintTextColor="@android:color/darker_gray"
            app:hintAnimationEnabled="true"
            android:background="@color/colorPrimary"
            app:startIconDrawable="@drawable/ic_twitter"
            app:startIconTint="@color/colorAccent"
            app:boxStrokeColor="?attr/colorAccent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_twitter"
                android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:hint="Twitter"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</ScrollView>